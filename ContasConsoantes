import java.util.Scanner;

public class ContarConsoantes {
    public static void main(String[] args) {
        // Vetor para armazenar 10 caracteres
        char[] letras = new char[10];
        // Lista para armazenar consoantes encontradas
        String consoantes = "";
        int contador = 0;

        // Scanner para ler entrada do usuário
        Scanner scanner = new Scanner(System.in);

        System.out.println("Digite 10 caracteres (um por vez):");

        for (int i = 0; i < 10; i++) {
            System.out.print("Caractere " + (i + 1) + ": ");
            String entrada = scanner.next().toLowerCase();  // Lê e converte para minúsculo

            // Pega apenas o primeiro caractere da entrada
            letras[i] = entrada.charAt(0);

            // Verifica se é uma letra e não é vogal
            if (Character.isLetter(letras[i]) && !"aeiou".contains(String.valueOf(letras[i]))) {
                consoantes += letras[i] + " ";
                contador++;
            }
        }

        scanner.close();

        // Resultado
        System.out.println("\nTotal de consoantes lidas: " + contador);
        System.out.println("Consoantes digitadas: " + consoantes);
    }
}
